<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} | [%thread] %-5level >> %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ml.putin.Electro.Main" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="ml.putin.Electro.Listener" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="info">
        <appender-red ref="STDOUT" />
    </root>
</configuration>